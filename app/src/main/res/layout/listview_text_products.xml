<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_product"
        android:layout_width="150sp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAlignment="center"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/text_defamount"
        android:layout_width="70sp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/text_product"
        android:layout_toRightOf="@+id/text_product"
        android:textAlignment="center"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/text_measure"
        android:layout_width="70sp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/text_defamount"
        android:layout_toRightOf="@+id/text_defamount"
        android:textAlignment="center"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/text_storage"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/text_measure"
        android:layout_toRightOf="@+id/text_measure"
        android:textAlignment="center"
        android:textSize="18sp" />

</RelativeLayout>